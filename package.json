{
  "name": "rosen-bridge",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "wallets/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "NODE_OPTIONS=--loader=extensionless vitest",
    "test:related": "NODE_OPTIONS=--loader=extensionless vitest related --run",
    "coverage": "npm run test -- --coverage",
    "version": "npx changeset version --ignore @rosen-bridge/rosen-app && npm i"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "devDependencies": {
    "@rosen-bridge/changeset-formatter": "^0.1.0",
    "@vitest/coverage-istanbul": "^1.3.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "vitest": "^1.2.2"
  }
}
