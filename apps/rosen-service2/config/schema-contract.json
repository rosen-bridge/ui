{
  "chain": {
    "type": "string",
    "validations": [
      {
        "choices": ["ergo", "bitcoin", "ethereum", "binance", "cardano", "doge"]
      }
    ]
  },
  "initialHeight": {
    "type": "number",
    "validations": [
      {
        "required": true
      }
    ]
  },
  "addresses": {
    "type": "object",
    "children": {
      "lock": {
        "type": "string",
        "validations": [
          {
            "required": true
          }
        ]
      },
      "WatcherPermit": {
        "type": "string",
        "validations": [
          {
            "required": true
          }
        ]
      },
      "WatcherTriggerEvent": {
        "type": "string",
        "validations": [
          {
            "required": true
          }
        ]
      },
      "Fraud": {
        "type": "string",
        "validations": [
          {
            "required": true
          }
        ]
      }
    }
  },
  "tokens": {
    "type": "object",
    "children": {
      "RWTId": {
        "type": "string",
        "validations": [
          {
            "required": true
          }
        ]
      }
    }
  },
  "explorerUrl": {
    "type": "string",
    "validations": [
      {
        "required": true,
        "when": { "path": "chain", "value": "ergo" }
      }
    ]
  },
  "koiosUrl": {
    "type": "string",
    "validations": [
      {
        "required": true,
        "when": { "path": "chain", "value": "cardano" }
      }
    ]
  },
  "koiosAuthToken": {
    "type": "string",
    "validations": [
      {
        "required": false
      }
    ]
  },
  "esploraUrl": {
    "type": "string",
    "validations": [
      {
        "required": true,
        "when": { "path": "chain", "value": "bitcoin" }
      }
    ]
  },
  "rpc": {
    "type": "object",
    "children": {
      "url": {
        "type": "string",
        "validations": [
          {
            "required": false
          }
        ]
      },
      "username": {
        "type": "string",
        "validations": [
          {
            "required": false
          }
        ]
      },
      "password": {
        "type": "string",
        "validations": [
          {
            "required": false
          }
        ]
      }
    }
  },
  "rpcUrl": {
    "type": "string",
    "validations": [
      {
        "required": true,
        "when": { "path": "chain", "value": "ethereum" }
      },
      {
        "required": true,
        "when": { "path": "chain", "value": "binance" }
      }
    ]
  },
  "blockcypherUrl": {
    "type": "string",
    "validations": [
      {
        "required": true,
        "when": { "path": "chain", "value": "doge" }
      }
    ]
  },
  "rpcConnections": {
    "type": "array",
    "items": {
      "type": "object",
      "children": {
        "url": {
          "type": "string",
          "validations": [
            {
              "required": true,
              "when": { "path": "chain", "value": "doge" }
            }
          ]
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
